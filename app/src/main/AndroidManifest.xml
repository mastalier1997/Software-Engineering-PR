<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.finanzmanager">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_white_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_white_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="navigationBar.graph_detailed"></activity>
        <activity android:name="addNew.create_category_expense" />
        <activity android:name="addNew.create_category_income" />
        <activity android:name="navigationBar.income_overview" />
        <activity android:name="navigationBar.expense_overview" />
        <activity android:name="navigationBar.imports" />
        <activity android:name="navigationBar.exports" />
        <activity android:name="navigationBar.graph" />
        <activity android:name="addNew.expense_menu" />
        <activity android:name="addNew.income_menu" />
        <activity android:name="addNew.new_income" />
        <activity android:name="addNew.new_expense" />
        <activity android:name="settings.settings" />
        <activity android:name="settings.repeat_settings_income" />
        <activity android:name="settings.repeat_settings_expense" />
        <activity android:name="settings.info_repeating_income" />
        <activity android:name="settings.info_repeating_expense" />
        <activity
            android:name="com.example.finanzmanager.activity_classes.EmailPasswordActivity"
            android:label="LogIn">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity_classes.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>