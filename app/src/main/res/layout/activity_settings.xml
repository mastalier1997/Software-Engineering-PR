<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/textView_repeat_settings"
        android:layout_width="225dp"
        android:layout_height="45dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="104dp"
        android:fontFamily="@font/droid"
        android:text="Löschen von sich wiederholenden Positionen"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView_delete_Data"
        android:layout_width="225dp"
        android:layout_height="45dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="176dp"
        android:fontFamily="@font/droid"
        android:text="Daten löschen"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_delete_Data"
        android:layout_width="43dp"
        android:layout_height="47dp"
        android:layout_marginStart="283dp"
        android:layout_marginTop="168dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/cancel_icon" />

    <ImageButton
        android:id="@+id/button_repeat_settings"
        android:layout_width="53dp"
        android:layout_height="55dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_menu_manage" />

    <TextView
        android:id="@+id/textView_logOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="248dp"
        android:fontFamily="@font/droid"
        android:text="Ausloggen"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton_logOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="232dp"
        android:src="@android:drawable/btn_dialog"
        app:layout_constraintStart_toEndOf="@+id/textView_logOut"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="317dp"
        android:layout_marginEnd="210dp"
        android:layout_marginBottom="394dp"
        android:drawableTint="@color/white"
        android:fontFamily="@font/droid"
        android:text="Akzent Farbe ändern"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/colorPicker"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/colorPicker"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:layout_marginStart="253dp"
        android:layout_marginTop="303dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="380dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.727"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

</android.support.constraint.ConstraintLayout>