<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282828 "
    tools:context="navigationBar.graph">


    <com.razerdp.widget.animatedpieview.AnimatedPieView
        android:id="@+id/animatedPieView_graph"
        android:layout_width="384dp"
        android:layout_height="398dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="181dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerMonthGraph"
        android:layout_width="121dp"
        android:layout_height="29dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="43dp"
        android:background="@drawable/spinner_border"
        android:popupBackground="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/animatedPieView_graph"
        app:layout_constraintEnd_toStartOf="@+id/spinnerYearGraph"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerYearGraph"
        android:layout_width="121dp"
        android:layout_height="29dp"
        android:layout_marginStart="252dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="43dp"
        android:background="@drawable/spinner_border"
        android:popupBackground="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/animatedPieView_graph"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>