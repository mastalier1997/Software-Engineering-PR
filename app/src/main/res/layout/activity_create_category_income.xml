<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282828 "
    tools:context="addNew.create_category_income">

    <EditText
        android:id="@+id/textView_newCatName_income"
        android:layout_width="276dp"
        android:layout_height="63dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        android:ems="10"
        android:fontFamily="@font/droid"
        android:hint=" Name der Kategorie"
        android:inputType="textPersonName"
        android:visibility="visible"
        android:maxLength="17"
        app:layout_constraintBottom_toTopOf="@+id/Button_create_category_income"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Button_selectImage_income" />

    <ImageButton
        android:id="@+id/Button_selectImage_income"
        android:layout_width="118dp"
        android:layout_height="119dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="300dp"
        android:background="#282828 "
        android:scaleType="fitStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/plus_icon_round" />

    <ImageButton
        android:id="@+id/Button_create_category_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="8dp"
        android:background="#282828 "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView_newCatName_income"
        app:layout_constraintStart_toEndOf="@+id/Button_selectImage_income"
        app:layout_constraintTop_toBottomOf="@+id/Button_selectImage_income"
        app:srcCompat="@mipmap/accespt_foreground" />

    <ImageButton
        android:id="@+id/Button_cancel_category_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#282828 "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Button_selectImage_income"
        app:layout_constraintStart_toStartOf="@+id/textView_newCatName_income"
        app:layout_constraintTop_toBottomOf="@+id/Button_selectImage_income"
        app:srcCompat="@mipmap/cancel_inv_foreground" />

</android.support.constraint.ConstraintLayout>