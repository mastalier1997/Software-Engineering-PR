<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282828"
    tools:context=".activity_classes.expense_overview">

    <ListView
        android:id="@+id/listView_all_expenses_month"
        android:layout_width="378dp"
        android:layout_height="392dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="184dp"
        android:background="@drawable/listview_border_red"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listView_all_expenses_category"
        android:layout_width="378dp"
        android:layout_height="392dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="184dp"
        android:background="@drawable/listview_border_red"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listView_all_expenses_quarters"
        android:layout_width="378dp"
        android:layout_height="392dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="184dp"
        android:background="@drawable/listview_border_red"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listView_all_expenses_years"
        android:layout_width="378dp"
        android:layout_height="392dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="184dp"
        android:background="@drawable/listview_border_red"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_Month_expense"
        android:layout_width="155dp"
        android:layout_height="32dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/spinner_border"
        android:dropDownWidth="wrap_content"
        android:popupBackground="#282828"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/spinner_year_expense"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_quarter_expense"
        android:layout_width="155dp"
        android:layout_height="32dp"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/spinner_border"
        android:dropDownWidth="wrap_content"
        android:popupBackground="#282828"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/spinner_year_expense"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_category_expense"
        android:layout_width="155dp"
        android:layout_height="32dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/spinner_border"
        android:dropDownWidth="wrap_content"
        android:popupBackground="#282828"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_year_expense"
        android:layout_width="155dp"
        android:layout_height="32dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/spinner_border"
        android:popupBackground="#282828"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_sortBy_expense"
        android:layout_width="200dp"
        android:layout_height="32dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="185dp"
        android:background="@drawable/spinner_border"
        android:popupBackground="#282828"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/droid"
        android:text="Ãœbersicht Ausgaben"
        android:textColor="#F66213"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_sortBy_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="Sortieren nach:"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_description" />

    <TextView
        android:id="@+id/textView_sort_expense_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="102dp"
        android:layout_marginTop="163dp"
        android:fontFamily="@font/droid"
        android:text="Beschreibung"
        android:textColor="#DC3939"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_sort_expense_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="163dp"
        android:fontFamily="@font/droid"
        android:text="Betrag"
        android:textColor="#DC3939"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_sort_expense_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="345dp"
        android:layout_marginTop="163dp"
        android:fontFamily="@font/droid"
        android:text="Datum"
        android:textColor="#DC3939"
        android:textSize="15sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_sort_expense_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="308dp"
        android:layout_marginTop="163dp"
        android:fontFamily="@font/droid"
        android:text="wiederholt"
        android:textColor="#DC3939"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_sort_expense_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="236dp"
        android:layout_marginTop="163dp"
        android:fontFamily="@font/droid"
        android:text="Art"
        android:textColor="#DC3939"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>